{
  "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "preserveConstEnums": true,
      "declaration": true,
      "declarationDir": "./dist/typings",
      "esModuleInterop": true,
      "sourceMap": true, /* sourceMaps are enabled so you’ll be able to use node’s DevTools integration to view TypeScript sources alongside your JavaScript */
      "inlineSourceMap": false,
      "listEmittedFiles": false,
      "listFiles": false,
      "moduleResolution": "node",
      "noFallthroughCasesInSwitch": true,
      "pretty": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "alwaysStrict": true, /* Parse in strict mode and emit "use strict" for each source file. */
      "traceResolution": false,
      "types": ["node"],
      "typeRoots": [
        "typings",
        "node_modules/@types"
      ],
      //"emitDeclarationOnly": true,
      //"isolatedModules": true, /* Ensure that Babel can safely transpile files in the TypeScript project */
      "experimentalDecorators": true, /* Enables experimental support for ES7 decorators. */
      "emitDecoratorMetadata": true, /* Enables experimental support for emitting type metadata for decorators. */
      "strictNullChecks": true,
      "importHelpers": true, /* Import emit helpers from 'tslib'. */
      "forceConsistentCasingInFileNames": true, /* Disallow inconsistently-cased references to the same file. */
  },
  "compileOnSave": false,
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "typings"]
}